<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/update_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text=" Ngày/tháng/năm" />

        <EditText
            android:id="@+id/etEmpDateThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập lại ngày/tháng/năm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView271"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text=" Giờ phút" />

        <EditText
            android:id="@+id/etEmpTimeThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="53dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập lại giờ phút" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView272"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text=" Khoản thu" />

        <EditText
            android:id="@+id/etEmpKhoanThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="44dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập lại khoản thu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView274"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text=" Lượng thu" />

        <EditText
            android:id="@+id/etEmpLuongThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="44dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập lại lượng thu được" />

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateDataThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#248BDD"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Cập nhật mới" />
</LinearLayout>